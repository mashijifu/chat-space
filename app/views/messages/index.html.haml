%h1
= render 'shared/side_bar'
.content
  .content_top
    = link_to edit_group_path(current_user) do
      %input{type: "submit", value: "Edit"}
    .content_top_group
    .content_top_member
  .content_main
    .content_main_member
    .content_main_message
    .content_main_datetime
  .form
    %textarea{name: "form-box", cols: "100", row: "1", placeholder: "type a message"}
    .form_botton
    %input{type: "submit", value: "Send"}
    .form_icon
      .fa.fa-image
